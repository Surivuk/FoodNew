<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:id="@+id/linearLayout2">

        <Switch
            android:id="@+id/socket_service_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:paddingRight="20dp"/>

        <!--<TextView
            android:id="@+id/socket_service_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sync Service is turned off."
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#009688"
            android:textSize="14sp"/>-->

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/show_user_info"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/user_info"
        android:layout_below="@+id/show_user_info"
        android:layout_alignRight="@+id/show_user_info"
        android:layout_alignEnd="@+id/show_user_info"
        android:layout_marginTop="58dp" />


</RelativeLayout>